{
    "name": "sklearn_net",
    "n_gpu": 1,

    "arch": {
        "type": "Model",
        "args": {
            "inputt": 3,
            "hidden": 4,
            "num_classes": 2
        }
    },
    "data_loader": {
        "type": "sklearn_DataLoader",
        "args":{
            "data_dir": "../",
            "batch_size": 10,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.01,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 5,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
